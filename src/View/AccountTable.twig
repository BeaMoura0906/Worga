<table
    class="table"
    id="fin-trans-table"
    data-toggle="table"
    data-height="auto"
    data-url="{{ pathRoot  ~ 'finTrans/listFinTrans' }}"
    data-ajax="ajaxRequest"
    data-query-params="queryParams"
    data-search="true"
    data-searchable="true"
    data-side-pagination="server"
    data-sortable="true"
    data-pagination="true"
    data-page-size="10"
    data-show-footer="true"
    data-footer-style="footerStyle">
    <input type="hidden" id="account-id" value="{{ clientAccount.id }}">
    <thead>
        <tr>
            <th data-field="id"
                data-searchable="false"
                data-sortable="false"
                data-visible="false"
            >#</th>
            <th data-field="actions"
                data-searchable="false"
                data-formatter="actionsFormatter"
                data-width="110px"
            >Actions</th>
            <th data-field="finTransDate" 
                data-searchable="true"
                data-sortable="true"
            >Date</th>
            <th data-field="title"
                data-searchable="true"
                data-sortable="true"
            >Titre</th>
            <th data-field="description"
                data-searchable="true"
                data-sortable="true"
                data-footer-formatter="totalFooterFormatter"
            >Description</th>
            <th data-field="to_be_debited"
                data-searchable="false"
                data-sortable="false"
                data-footer-formatter="totalToBeDebitedFormatter"
                data-width="150px"
            >À débiter</th>
            <th data-field="debit"
                data-searchable="false"
                data-sortable="false"
                data-footer-formatter="totalDebitFormatter"
                data-width="150px"
            >Débit</th>
            <th data-field="credit"
                data-searchable="false"
                data-sortable="false"
                data-footer-formatter="totalCreditFormatter"
                data-width="150px"
            >Crédit</th>
        </tr>
    </thead>
</table>

{% include "Modals/EditFinTransModal.twig" with {clientAccount: clientAccount} %}

<script>
    function ajaxRequest(params) 
    {
        const url = $('#fin-trans-table').data('url')

        $.get(url + '/?' + $.param(params.data))
            .then(function (res) {
                const parsedResponse = JSON.parse(res) 
                window.totalToBeDebited = parsedResponse.totals.totalToBeDebited;
                window.totalDebit = parsedResponse.totals.totalDebit;
                window.totalCredit = parsedResponse.totals.totalCredit;

                params.success(parsedResponse)
            })
            .fail(function (xhr, status, error) {
                params.error(xhr.responseText)
            })
    }

    function queryParams(params)
    {
        params.accountId = $('#account-id').val()
        return params
    }

    function actionsFormatter(value, row)
    {
        return '<button type="button" class="btn btn-sm btn-secondary rounded-circle m-1" data-bs-toggle="modal" data-bs-target="#viewFinTransModal" data-url="{{ pathRoot}}finTrans/getFinTransToView/finTransId/' + row.id + '"  ><i class="bi bi-eye"></i></button>' + '<button type="button" class="btn btn-sm btn-primary rounded-circle m-1" data-bs-toggle="modal" data-bs-target="#editFinTransModal" data-url="{{ pathRoot}}finTrans/getFinTransToEdit/finTransId/' + row.id + '"><i class="bi bi-pencil-square"></i></button>'
    }

    function totalToBeDebitedFormatter(data) 
    {
        return window.totalToBeDebited
    }

    function totalDebitFormatter(data) 
    {
        return window.totalDebit
    }

    function totalCreditFormatter(data) 
    {
        return window.totalCredit
    }

    function totalFooterFormatter()
    {
        return 'Total'
    }

    function footerStyle(column)
    {
        return {
            'actions' : {
                classes: 'bg-white border-white'
            },
            'finTransDate' : {
                classes: 'bg-white border-white'
            },
            'title' : {
                classes: 'bg-white border-white'
            },
            'description' : {
                classes: 'text-end bg-secondary-subtle'
            },
            'to_be_debited' : {
                classes: 'bg-light'
            },
            'debit' : {
                classes: 'bg-light'
            },
            'credit' : {
                classes: 'bg-light'
            }
        }[column.field]
    }

</script>